# ===========================================
# Maxapp ZRH - Environment Variables Example
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ===========================================
# Application Configuration
# ===========================================
# Next.js environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Maxapp ZRH"

# ===========================================
# Internationalization (i18n)
# ===========================================
# Supported locales
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,de-CH

# ===========================================
# Sanity Studio Configuration
# ===========================================
# Sanity project details
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API tokens
SANITY_API_READ_TOKEN=your_sanity_read_token
SANITY_API_WRITE_TOKEN=your_sanity_write_token

# Sanity Studio URL (for admin access)
NEXT_PUBLIC_SANITY_STUDIO_URL=/studio

# Sanity CDN configuration
NEXT_PUBLIC_SANITY_CDN_URL=https://cdn.sanity.io
NEXT_PUBLIC_SANITY_USE_CDN=true

# ===========================================
# Supabase Configuration
# ===========================================
# Supabase project details
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase database configuration
SUPABASE_DB_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Supabase storage configuration
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=uploads
SUPABASE_STORAGE_BUCKET_PRIVATE=private-uploads

# ===========================================
# Resend Email Service
# ===========================================
# Resend API configuration
RESEND_API_KEY=re_your_resend_api_key
NEXT_PUBLIC_RESEND_FROM_EMAIL=noreply@maxappzrh.com

# Email templates and configuration
RESEND_FROM_NAME="Maxapp ZRH"
RESEND_REPLY_TO=support@maxappzrh.com

# Email addresses for different purposes
CONTACT_EMAIL=hello@maxappzrh.com
SUPPORT_EMAIL=support@maxappzrh.com
LEGAL_EMAIL=legal@maxappzrh.com
PRIVACY_EMAIL=privacy@maxappzrh.com
INDIA_EMAIL=india@maxappzrh.com

# ===========================================
# Analytics & Tracking
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ===========================================
# Authentication & Security
# ===========================================
# JWT and session secrets
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# API security
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_key_here

# ===========================================
# File Upload & Storage
# ===========================================
# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Storage paths
UPLOAD_DIR=./public/uploads
TEMP_DIR=./tmp

# ===========================================
# External Services
# ===========================================
# Payment processing (if needed)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social media APIs (if needed)
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_CLIENT_ID=your_linkedin_client_id
GITHUB_CLIENT_ID=your_github_client_id

# ===========================================
# Development & Debugging
# ===========================================
# Debug flags
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEV_TOOLS=true

# Database debugging
DB_DEBUG=false
QUERY_DEBUG=false

# ===========================================
# Production Configuration
# ===========================================
# Production URLs (update for production)
NEXT_PUBLIC_PRODUCTION_URL=https://maxappzrh.com
NEXT_PUBLIC_STAGING_URL=https://staging.maxappzrh.com

# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.maxappzrh.com
NEXT_PUBLIC_IMAGES_URL=https://images.maxappzrh.com

# ===========================================
# Monitoring & Error Tracking
# ===========================================
# Sentry (error tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# Rate Limiting & Security
# ===========================================
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS configuration
CORS_ORIGIN=http://localhost:3000,https://maxappzrh.com
CORS_CREDENTIALS=true

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
FEATURE_ANALYTICS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_FILE_UPLOAD=true
FEATURE_USER_REGISTRATION=false
FEATURE_BLOG_COMMENTS=false

# ===========================================
# Swiss & Indian Compliance
# ===========================================
# Data protection compliance
GDPR_ENABLED=true
DPDP_ENABLED=true
FADP_ENABLED=true

# Cookie consent
COOKIE_CONSENT_REQUIRED=true
COOKIE_CONSENT_VERSION=1.0

# Data retention
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=365

# ===========================================
# Office Information
# ===========================================
# Swiss office
SWISS_OFFICE_ADDRESS="Birkenstrasse 49, 6343 Rotkreuz, Schweiz"
SWISS_OFFICE_COMPANY="Maxsoft AG"
SWISS_OFFICE_EMAIL="info@maxappzrh.com"

# Indian office
INDIAN_OFFICE_ADDRESS="123A Triplicane High Road, Triplicane, Tamil Nadu, Chennai 600 005"
INDIAN_OFFICE_COMPANY="Maxapp"
INDIAN_OFFICE_EMAIL="info@maxappzrh.com"

# ===========================================
# Notes
# ===========================================
# 1. Replace all placeholder values with actual credentials
# 2. Never commit .env.local to version control
# 3. Use different values for development, staging, and production
# 4. Rotate secrets regularly for security
# 5. Use environment-specific files (.env.development, .env.production)
# 6. Consider using a secrets management service for production
